<Page
    x:Class="AirFIT.Transcrever"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AirFIT"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <Style TargetType="Button" x:Key="FlyoutButtonStyle">
            <Setter Property="Margin" Value="10" />
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Page.Resources>

    <Grid Background="#3C1F19">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Image Style="{StaticResource WhiteLogoStyle}" />

        <StackPanel Orientation="Horizontal" 
                    Grid.Row="1" 
                    HorizontalAlignment="Center"/>

        <Button x:ConnectionId='1' x:Name="button" HorizontalAlignment="Left" Height="84" Margin="47,90,0,0" Grid.Row="3" VerticalAlignment="Top" Width="90"                         >
            <Image Source ="Assets/play_incon.png" Margin="0,5,0,-5"/>
        </Button>
        <Button x:ConnectionId='2' x:Name="button1"  HorizontalAlignment="Left" Margin="178,94,0,0" VerticalAlignment="Top" Height="80" RenderTransformOrigin="0.5,0.5" Width="91"                          Grid.Row="3">
            <Image Source="Assets/stop_icon.png"/>
        </Button>
        <MediaElement x:ConnectionId='3' x:Name="mediaElement"  HorizontalAlignment="Left" Height="58" Margin="46,44,0,0" Grid.Row="3" VerticalAlignment="Top" 
                      Width="238"
                      AutoPlay="False"
                      Volume="1"
                      Source="C:\Users\pedro\Downloads\app.mp3"/>
        <Slider x:ConnectionId='4' x:Name="slider" HorizontalAlignment="Left" Margin="46,192,0,0" Grid.Row="3" VerticalAlignment="Top" Width="124"/>
        <TextBlock x:ConnectionId='5' x:Name="textBlock" HorizontalAlignment="Left" Height="32" Margin="207,191,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="106">
        	<Run Text="Volume"/>
        	<LineBreak/>
        	<Run/>
        </TextBlock>
        <Button x:ConnectionId='6' x:Name="button2"  HorizontalAlignment="Left" Height="82" Margin="293,95,0,0" Grid.Row="3" VerticalAlignment="Top" Width="104"                          >
            <Image Source="Assets/pause_icon.png"/>
        </Button>
        <Button x:ConnectionId='7' x:Name="button3"  HorizontalAlignment="Left" Height="74" Margin="45,245,0,0" Grid.Row="3" VerticalAlignment="Top" Width="94"                          >
            <Image Source="Assets/open_icon.png" Margin="-9,2,9,-2"/>
        </Button>

        <Frame x:ConnectionId='8' Name="MyFrame"></Frame>
        <TextBox x:ConnectionId='9' x:Name="transcrito" HorizontalAlignment="Left" Height="244" Margin="478,78,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="318"/>

        <Button x:ConnectionId='10' x:Name="button4" Content="Criar Atividades&#xD;&#xA;&#xA;" HorizontalAlignment="Left" Height="40" Margin="406,11,0,0" Grid.Row="3" VerticalAlignment="Top" Width="178"                              />
        <Button x:ConnectionId='11' x:Name="button5" Content="Transcrever Áudio&#xD;&#xA;" HorizontalAlignment="Left" Height="40" Margin="679,11,0,0" Grid.Row="3" VerticalAlignment="Top" Width="178"                          />
    </Grid>
</Page>

